PRO filt_read_vega, vega_lam, vega_flam, file=fileIF NOT keyword_set(file) THEN file = '~/idl/filters/data/A0V_KUR_BB.SED'get_lun, unitopenr, unit, filenmax = numlines(file)line = ''readf, unit, line, format='(a80)'spectrum = fltarr(2*(nmax-1))readf, unit, spectrumfree_lun, unitspectrum = reform(spectrum, 2, nmax-1)vega_lam  = reform(spectrum(0,*), nmax-1)vega_flam = reform(spectrum(1,*), nmax-1)vega_norm = interpol(vega_flam,vega_lam, 1.e4)if keyword_set(plot) then plot,alog10(spectrum(0,*)),alog10(spectrum(1,*)/vega_norm),$xrange=[2.8, 4.8], yrange=[-4.5, 2],ys=1, xs=1returnEND